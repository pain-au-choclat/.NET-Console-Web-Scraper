@model Scraper.Models.EmailModel

<table style="margin: 0px; padding: 0px; width: 100%; height: 100%;" border="0" cellspacing="0" cellpadding="0" bgcolor="#efefef">
    <tbody>
        <tr style="margin: 0px; padding: 0px;">
            <td align="center">
                <table style="width: 570px; height: 100%;" border="0" bgcolor="#ffffff">
                    <tbody>
                        <tr>
                            <td style="padding: 15px;" valign="top" bgcolor="#ffffff">
                                <table style="width: 570px;" border="0">
                                    <tbody>
                                        <tr>
                                            <td style="text-align: right;" height="189" align="right" valign="top">
                                                <img src="https://blog.hartleybrody.com/wp-content/uploads/2012/12/scraper-tool.jpg" border="0" alt="Scraper" width="181" height="106" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <p class="bold" style="font-size: 13px; font-weight: bold; margin: 0 0 1.7em; line-height: 1.5em; font-family: Lucida Sans Unicode; color: #666;">Automatic email from Web scraper:</p>
                                                <p style="font-size: 13px; margin: 0 0 1.7em; color: #666; font-family: Lucida Sans Unicode; line-height: 1.5em;">
                                                    <span style="white-space: pre-line">Web comparison was successfully completed on @Model.DateTime</span>
                                                    <span style="white-space: pre-line">Please find changes to text/html files below:</span>
                                                </p>
                                                @if (Model.RemovedFromLatest.Count > 0)
                                                {
                                                    <p class="bold" style="font-size: 13px; font-weight: bold; margin: 0 0 1.7em; line-height: 1.5em; font-family: Lucida Sans Unicode; color: #666;">The following lines have been removed from the website:</p>
                                                    foreach (var line in Model.RemovedFromLatest)
                                                    {
                                                        <p style="font-size: 13px; margin: 0 0 1.7em; color: #666; font-family: Lucida Sans Unicode; line-height: 1.5em;">
                                                            <span style="white-space: pre-line">@line</span>
                                                        </p>
                                                    }
                                                }
                                                @if (Model.AddedToLatest.Count > 0)
                                                {
                                                    <p class="bold" style="font-size: 13px; font-weight: bold; margin: 0 0 1.7em; line-height: 1.5em; font-family: Lucida Sans Unicode; color: #666;">The following lines have been added to the website:</p>
                                                    foreach (var line in Model.AddedToLatest)
                                                    {
                                                        <p style="font-size: 13px; margin: 0 0 1.7em; color: #666; font-family: Lucida Sans Unicode; line-height: 1.5em;">
                                                            <span style="white-space: pre-line">@line</span>
                                                        </p>
                                                    }
                                                }
                                                <p style="font-size: 13px; margin: 0 0 1.7em; color: #666; font-family: Lucida Sans Unicode; line-height: 1.5em;">
                                                    <span style="white-space: pre-line">
                                                        @(Model.FilesRemoved ? "Please find files that have been removed/replaced below:" :
                                                        "Please find files that have been added below:")
                                                    </span>
                                                </p>
                                                @if (Model.FilesDifferences.Count > 0)
                                                {
                                                    foreach (var file in Model.FilesDifferences)
                                                    {
                                                        <p style="font-size: 13px; margin: 0 0 1.7em; color: #666; font-family: Lucida Sans Unicode; line-height: 1.5em;">
                                                            <span style="white-space: pre-line">@(Model.FilesRemoved ? "[REMOVED]" : "[ADDED]") @file</span>
                                                        </p>
                                                    }
                                                }
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
    </tbody>
</table>